<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageButton
        android:id="@+id/geofence"
        android:src="@drawable/geofence"
        android:layout_width="85dip"
        android:layout_height="85dip"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GeoFence"
        android:textSize="20dp"/>

    <ImageButton
        android:id="@+id/falldetect"
        android:src="@drawable/falldown"
        android:text="FallDetect"
        android:layout_width="85dip"
        android:layout_height="85dip"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FallDetect"
        android:textSize="20dp"/>

    <ImageButton
        android:id="@+id/ambient"
        android:src="@drawable/ambient"
        android:layout_width="85dip"
        android:layout_height="85dip"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ambient"
        android:textSize="20dp"/>

    <ImageButton
        android:id="@+id/settings"
        android:src="@drawable/settings"
        android:layout_width="85dip"
        android:layout_height="85dip"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="20dp"/>


</LinearLayout>
